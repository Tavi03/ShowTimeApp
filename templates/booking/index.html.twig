{% extends 'layouts/base_user.html.twig' %}

{% block title %}Book {{ festival.name }}{% endblock %}

{% block content %}
    <!-- Hero Section -->
    <section class="bg-linear-to-r from-primary to-secondary text-primary-content py-16">
        <div class="container mx-auto px-4">
            <div class="text-center">
                <h1 class="text-4xl md:text-5xl font-bold mb-4">Book Your Experience</h1>
                <p class="text-xl opacity-90">Secure your spot at {{ festival.name }}</p>
            </div>
        </div>
    </section>

    <!-- Booking Form Section -->
    <section class="py-12 bg-base-100">
        <div class="container mx-auto px-4">
            <div class="max-w-4xl mx-auto">
                <div class="grid md:grid-cols-2 gap-8">
                    <!-- Festival Details Card -->
                    <div class="card bg-base-200 shadow-xl">
                        <div class="card-body">
                            <h2 class="card-title text-2xl mb-4">
                                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M9 19V6l12-3v13M9 19c0 1.105-.895 2-2 2s-2-.895-2-2 .895-2 2-2 2 .895 2 2zm12-3c0 1.105-.895 2-2 2s-2-.895-2-2 .895-2 2-2 2 .895 2 2z"></path>
                                </svg>

                                {{ festival.name }}
                            </h2>

                            <div class="space-y-4">
                                <div class="flex items-center gap-3">
                                    <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor"
                                         viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                    </svg>
                                    <span class="text-base-content">{{ festival.location }}</span>
                                </div>

                                <div class="flex items-center gap-3">
                                    <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor"
                                         viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                    <span class="text-base-content">
                                        {{ festival.startDate.format('j M, Y') }} - {{ festival.endDate.format('j M, Y') }}
                                    </span>
                                </div>

                                {% if festival.bands is not empty %}
                                    <div class="mt-4">
                                        <h3 class="font-semibold mb-2 flex items-center gap-2">
                                            <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor"
                                                 viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                                            </svg>
                                            Performing Artists
                                        </h3>
                                        <div class="flex flex-wrap gap-2">
                                            {% for band in festival.bands %}
                                                <span class="badge badge-primary badge-outline">{{ band.name }}</span>
                                            {% endfor %}
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <!-- Booking Form Card -->
                    <div class="card bg-base-200 shadow-xl">
                        <div class="card-body">
                            <h2 class="card-title text-2xl mb-6">
                                <svg class="w-6 h-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                          d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                                </svg>
                                Booking Details
                            </h2>

                            {{ include('booking/_form.html.twig', {'button_label': 'Book'}) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Security Note Section -->
    <section class="py-8 bg-base-300">
        <div class="container mx-auto px-4">
            <div class="text-center">
                <div class="flex items-center justify-center gap-2 text-base-content opacity-70">
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                    </svg>
                    <span class="text-sm">Your information is secure and will not be shared with third parties</span>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
