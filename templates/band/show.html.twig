{% extends 'base.html.twig' %}

{% block title %}Band{% endblock %}

{% block content %}
    <h1>Band</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ band.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ band.name }}</td>
        </tr>
        <tr>
            <th>Genre</th>
            <td>{{ band.musicGenre.value }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_band_index') }}" class="btn btn-primary">Back to list</a>

    <a href="{{ path('app_band_edit', {'id': band.id}) }}" class="btn btn-secondary my-2">Edit</a>

{% endblock %}
