{% extends 'layouts/base_admin.html.twig' %}

{% block title %}Festival Index{% endblock %}

{% block content %}
    <h1 class="text-2xl mb-2">Festivals</h1>

    <a href="{{ path('app_festival_new') }}" class="btn btn-primary my-2">Create new</a>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Location</th>
            <th>Bands</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for festival in festivals %}
            <tr>
                <td>{{ festival.id }}</td>
                <td>{{ festival.name }}</td>
                <td>{{ festival.location }}</td>
                <td>{{ festival.startDate.format('d-m-Y') }}</td>
                <td>{{ festival.endDate.format('d-m-Y') }}</td>
                <td>
                    {% for band in festival.bands %}
                        <span class="badge badge-outline mr-1">{{ band.name }}</span>
                    {% else %}
                        <span class="">No bands</span>
                    {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_festival_edit', {'id': festival.id}) }}" class="btn btn-secondary">Edit</a>
                    {{ include('festival/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No Records Found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
